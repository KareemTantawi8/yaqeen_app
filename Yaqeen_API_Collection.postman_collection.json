		{
			"name": "3. Quran.com API (Verses by Page)",
			"item": [
				{
					"name": "Get Verses by Page - Example (Page 1)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "https://api.quran.com/api/v4/verses/by_page/1?words=true&word_fields=v2_page,location,text_uthmani,codeV2&fields=text_uthmani_simple",
							"protocol": "https",
							"host": [
								"api",
								"quran",
								"com"
							],
							"path": [
								"api",
								"v4",
								"verses",
								"by_page",
								"1"
							],
							"query": [
								{
									"key": "words",
									"value": "true"
								},
								{
									"key": "word_fields",
									"value": "v2_page,location,text_uthmani,codeV2"
								},
								{
									"key": "fields",
									"value": "text_uthmani_simple"
								}
							]
						},
						"description": "Get Quran verses by page number with word-level data\n\nParameters:\n- page_number: 1-604 (Total pages in the Quran)\n- words=true: Include word-level data\n- word_fields: Fields to include for words (v2_page,location,text_uthmani,codeV2)\n- fields: Fields to include for verses (text_uthmani_simple)"
					},
					"response": []
				},
				{
					"name": "Get Verses by Page - Template",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "https://api.quran.com/api/v4/verses/by_page/{{page_number}}?words=true&word_fields=v2_page,location,text_uthmani,codeV2&fields=text_uthmani_simple",
							"protocol": "https",
							"host": [
								"api",
								"quran",
								"com"
							],
							"path": [
								"api",
								"v4",
								"verses",
								"by_page",
								"{{page_number}}"
							],
							"query": [
								{
									"key": "words",
									"value": "true"
								},
								{
									"key": "word_fields",
									"value": "v2_page,location,text_uthmani,codeV2"
								},
								{
									"key": "fields",
									"value": "text_uthmani_simple"
								}
							]
						},
						"description": "Template for getting verses by page\n\n{{page_number}}: 1-604"
